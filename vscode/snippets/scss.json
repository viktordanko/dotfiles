{
  // Place your snippets for scss here. Each snippet is defined under a snippet name and has a prefix, body and
  // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
  // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
  // same ids are connected.
  // Example:
  // "Print to console": {
  // 	"prefix": "log",
  // 	"body": [
  // 		"console.log('$1');",
  // 		"$2"
  // 	],
  // 	"description": "Log output to console"
  // }
  "media": {
    "prefix": ["mq", "media"],
    "body": ["@media ($$1) {", "    $2", "}"],
    "description": "media queries"
  },
  "bem element": {
    "prefix": ["_"],
    "body": ["&__$1"],
    "description": "bem element shortcut"
  },
  "split": {
    "prefix": ["sp"],
    "body": ["@split hover {", "    $2", "}"],
    "description": "split query"
  },
  "brackets": {
    "prefix": [".."],
    "body": [" {", "    $1", "}"],
    "description": "brackets"
  },
  "flex-center": {
    "prefix": ["cc"],
    "body": [
      "display: flex;",
      "justify-content: center;",
      "align-items: center;"
    ],
    "description": "Align items in flexbox container."
  },
  "background-cover": {
    "prefix": ["bgc"],
    "body": [
      "background-size: cover;",
      "background-position: center;",
      "background-repeat: no-repeat;",
      "background-color: #f2f2f2;"
    ],
    "description": "Stretch background img and add additional common rules."
  },
  "last-child-no-margin": {
    "prefix": ["lc0"],
    "body": ["& > :last-child {", "\tmargin-bottom: 0;", "}"],
    "description": "Last child of the component has no margin."
  },
  "strech": {
    "prefix": ["afull"],
    "body": [
      "position: absolute;",
      "top: 0;",
      "left: 0;",
      "width: 100%;",
      "height: 100%;"
    ],
    "description": "Stretch item from end to end."
  },
  "console-log": {
    "prefix": ["clg"],
    "body": ["outline: 1px solid red;"],
    "description": "CSS console log"
  }
}
